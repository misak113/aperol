{
  "name": "aperol",
  "version": "1.0.0",
  "description": "JS library for asynchronous processing of side effects in action based application.",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "package.json",
    "package-lock.json"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "build": "webpack --config=webpack.config.js",
    "prebuild": "rm -rf dist/*",
    "prepublish": "npm run prebuild && npm run build",
    "test": "NODE_ENV=test mocha --opts mocha.opts",
    "lint": "tslint --format checkstyle --type-check --project tsconfig.json --config tslint.json --out dist/tslint-report.xml {src,tests}/**/*.{ts,tsx}",
    "lint-humanized": "tslint --config tslint.json --type-check --project tsconfig.json {src,tests}/**/*.{ts,tsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/misak113/aperol.git"
  },
  "keywords": [
    "async",
    "flux",
    "redux",
    "await",
    "yield",
    "iterator",
    "side-effects",
    "action"
  ],
  "author": "Michael Zabka <zabka.michael@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/misak113/aperol/issues"
  },
  "homepage": "https://github.com/misak113/aperol#readme",
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/should": "^8.3.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "json-loader": "^0.5.4",
    "mocha": "^3.4.2",
    "should": "^11.2.1",
    "ts-loader": "^2.2.2",
    "ts-node": "^3.2.0",
    "typescript": "^2.4.1",
    "webpack": "^1.15.0"
  }
}
