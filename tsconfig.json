{
    "compilerOptions": {
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "target": "es6",
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "types/",
            "node_modules/@types/"
        ],
        "lib": ["dom", "es5", "scripthost", "esnext"]
    },
    "include": [
        "src/**/*.ts"
    ]
}
